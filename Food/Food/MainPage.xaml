<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Food.MainPage">
    <ScrollView>
        <StackLayout BackgroundColor="#D6C3FC" Padding="10">
            <Label Text="Главная" FontSize="24" TextColor="#5B0EB3" HorizontalOptions="Center" />
            <Frame BackgroundColor="#BFA2DB" Padding="5" CornerRadius="10">
                <StackLayout Orientation="Horizontal" Padding="10" Spacing="10">
                    <Label Text="Название" FontSize="16" WidthRequest="150" TextColor="White" />
                    <Label Text="Цена" FontSize="16" WidthRequest="80" TextColor="White" />
                    <Label Text="Выбрать" FontSize="16" WidthRequest="70" TextColor="White" />
                </StackLayout>
            </Frame>
            <StackLayout x:Name="ProductsStackLayout" Spacing="10" />
            <Button Text="Перейти в корзину"
                Clicked="GoToCartClicked"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
